; IBM PC ROM BIOS function call header
BIOS:
; Video services
.VIDEO_INT					equ 10h
.VIDEO_SET_MODE				equ 0x00
.VIDEO_SET_CURSOR			equ 0x02
.VIDEO_GET_CURSOR			equ 0x03
.VIDEO_READ					equ 0x08
.VIDEO_PRINT				equ 0x09
.VIDEO_TTY					equ 0x0E
.VIDEO_GET_MODE				equ 0x0F
; Hardware detection
.EQUIP_INT					equ 11h
.RAM_INT					equ 12h
; Disk services
.DISK_INT					equ 13h
.DISK_RESET					equ 0x00
.DISK_READ					equ 0x02
.DISK_READ1					equ 0x0201
.DISK_WRITE					equ 0x03
.DISK_WRITE1				equ 0x0301
.DISK_CHS_MAX_CYLINDERS		equ 0x0400
.DISK_LBA_CHECK				equ 0x41
.DISK_LBA_CHECK_IN			equ 0x55AA
.DISK_LBA_CHECK_OUT			equ 0xAA55
.DISK_LBA_READ				equ 0x42
.DISK_DAP_SIZE				equ 0x0010
; Serial I/O
.COM_INT					equ 14h
.COM_INIT					equ 0x00
.COM_WRITE					equ 0x01
.COM_READ					equ 0x02
.COM_STATUS					equ 0x03
.COM_ERROR_MASK				equ 0x8E
; Tape I/O
.TAPE_INT					equ 15h
; System services
.SYS_INT					equ 15h
.SYS_ENABLE_A20				equ 0x2401
.SYS_A20_SUPPORT			equ 0x2403
.SYS_EXT_MEMORY				equ 0x88
.SYS_INVALID				equ 0x80
.SYS_UNSUPPORTED			equ 0x86
; Keyboard services
.KEY_INT					equ 16h
.KEY_GET					equ 0x00
.KEY_CHECK					equ 0x01
; Parallel I/O
.LPT_INT					equ 17h
.LPT_PRINT					equ 0x00
.LPT_INIT					equ 0x01
.LPT_ERROR_MASK				equ 0x29
; Reboot
.BASIC_INT					equ 18h
.BOOT_INT					equ 19h
; RTC services
.RTC_INT					equ 1Ah
.RTC_GET_TIME				equ 0x02
.RTC_SET_TIME				equ 0x03
.RTC_GET_DATE				equ 0x04
.RTC_SET_DATE				equ 0x05
; Hooks
.BREAK_INT					equ 1Bh
.TIMER_INT					equ 1Ch
; Data
.VPT_INT					equ 1Dh
.DPT_INT					equ 1Eh
.DPT_SPECIFY1				equ 0x0000
.DPT_SPECIFY2				equ 0x0001
.DPT_MOTOR_OFF_DELAY		equ 0x0002
.DPT_SECTOR_SIZE			equ 0x0003
.DPT_SECTOR_1K				equ 0x03
.DPT_END_OF_TRACK			equ 0x0004
.DPT_RW_GAP_LENGTH			equ 0x0005
.DPT_DATA_LENGTH			equ 0x0006
.DPT_FORMAT_GAP_LENGTH		equ 0x0007
.DPT_FILLER_BYTE			equ 0x0008
.DPT_HEAD_SETTLE_TIME		equ 0x0009
.DPT_MOTOR_START_TIME		equ 0x000A
.DPT_SIZE					equ 0x000E
.FONT_INT					equ 1Fh
